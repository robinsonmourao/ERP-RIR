<%= form_with(model: @fatura, method: verbo) do |form| %>
  <div class="textboxes-grid">

    <div class='caixa-de-texto'>
      <%= form.label :"", class:'required' %>
      <%= form.collection_select :codigo_atendimento, Atendimento.all, :codigo_atendimento, :codigo_atendimento_composto,  
                                 { prompt: "SELECIONE um ATENDIMENTO" }, 
                                 { class: 'custom-select-tag', required: true } %>
    </div>

    <div class='caixa-de-texto'>
      <%= form.label :"", class:'required' %>
      <%= form.collection_select :codigo_status, Status.all, :codigo_status, :codigo_acfs_composto, 
                                 { prompt: "SELECIONE um STATUS da FATURA" }, 
                                 { class: 'custom-select-tag', required: true } %>
    </div>

    <div class='caixa-de-texto'>
      <%= #form.collection_select :codigo_meio_pagamento, MeioPagamento.all, :codigo_meio_pagamento, :descricao, 
                                #{ prompt: "SELECIONE um MEIO de PAGAMENTO" }, 
                                #{ class: 'custom-select-tag', required: true } 
                                %>
    </div>

    <div class='caixa-de-texto'>
      <%= #form.collection_select :codigo_grupo, Grupo.all, :codigo_grupo, :codigo_grupo, 
                                 #{ prompt: "SELECIONE um AGRUPAMENTO" }, 
                                 #{ class: 'custom-select-tag', required: true }
                                 %>
    </div>

    <div class='caixa-de-texto'>
      <%= form.text_field :chave, placeholder: "INFORME uma chave" %>
    </div>

    <div class='caixa-de-texto'>
      <%= form.text_field :valor, placeholder: "INFORME o valor da fatura" %>
    </div>

    <div class='caixa-de-texto'>
      <%= form.text_field :vencimento, placeholder: "INFORME o dia de vencimento" %>
    </div>

    <div class='botao-quadrado'>
      <%= form.check_box :instalacao, { class: 'markbox' }, SIM, NAO %>
      <%= form.label "markbox_nota_fiscal", "Instalação inclusa?" %>
    </div>

    <%= form.submit "Enviar", id: "form-submit-button" %>
  </div>
<% end %>  