<%= form_with(model: @contato, url: contatos_path, method: :post) do |form| %>
  <div class="textboxes-grid">

    <div class='caixa-de-texto'>
      <%= form.label :"", class:'required' %>
      <%= form.select :tabela, 
                      options_for_select([["fornecedor", FORNECEDOR], ["site", SITE], ["cliente", CLIENTE]]), 
                                         { include_blank: 'Tabela' }, { class: 'custom-select-tag' } %>
    </div>

    <div class='caixa-de-texto'>
      <%= form.label :"", class:'required' %>
      <%= form.select :codigo_tipo_contato, 
                      options_from_collection_for_select(@tipo_contato, :codigo_tipo_contato, :descricao), 
                      { include_blank: 'Tipo de contato' }, { class: 'custom-select-tag' } %> 
    </div>

    <div class='caixa-de-texto'>
      <%= form.label :"", class:'required' %>
      <%= form.select :codigo_meio_contato, 
                      options_from_collection_for_select(@meio_contato, :codigo_meio_contato, :descricao),
                      { include_blank: 'Meio de contato' }, { class: 'custom-select-tag' } %>
    </div>

    <div class='caixa-de-texto'>
      <%= form.label :"", class:'required' %>
      <%= form.text_field :nome_pessoa, placeholder: "Nome", required: true %>
    </div>

    <div class='caixa-de-texto'>
      <%= form.label :"", class:'required' %>
      <%= form.text_field :descricao, placeholder: "Descrição", required: true %>
    </div>

    <div class='caixa-de-texto'>
      <%= form.label :"" %>
      <%= form.text_field :observacao, placeholder: "Observação" %>
    </div>

    <%= form.submit "Cadastrar", id: "form-submit-button" %>
  </div>
<% end %>