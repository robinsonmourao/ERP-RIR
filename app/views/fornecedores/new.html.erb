<div class="container-cadastros">
  <div class="formulario-cadastros">
    <div class='titulo-formulario-cadastros'>Cadastrar novo fornecedor</div>

      <%= render 'form', fornecedor: @fornecedor, endpoint: fornecedores_path, verbo: 'post' %>

      <% if [SUPER, ADMINISTRATIVO].include?(current_usuario.permissao) %>
        <h2>Adicionais de SUPER e ADMINISTRATIVO</h2>
        <%= render "/municipios/new" %>
      <% end %>

      <br>

      <div>
        <%= link_to "Voltar para fornecedores", fornecedores_path, class: 'voltar-link' %>
      </div>
    </div>
  </div>
</div>
